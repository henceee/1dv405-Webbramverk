<% if flash[:notice] %>
    <div class="notice">
        <%= flash[:notice] %>
    </div>
<% end %>

<div id="login">
    <h2>Sign in</h2>
    
    <fieldset>
        <%= form_tag(login_path, method:"post") do %>
       <p> <%= label_tag(:email,"Email") %></p>
       <p><%= email_field_tag(:email) %></p>
       <p> <%= label_tag(:password,"Password") %></p>
       <p><%= password_field_tag(:password) %></p>
       <p> <%= submit_tag("Login") %></p>
        <% end %>
    </fieldset>
    
    <%= link_to("Register", new_user_path) %>
